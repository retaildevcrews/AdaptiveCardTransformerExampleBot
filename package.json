{
	"name": "adaptive-card-transformer-example",
	"version": "0.1.0",
	"description": "Adaptive Card Transformer Example",
	"author": "Microsoft",
	"license": "MIT",
	"main": "./lib/index.js",
	"scripts": {
		"build": "tsc --build",
		"lint": "eslint --max-warnings=0 '**/*.ts'",
		"lint:fix": "eslint --max-warnings=0 --fix '**/*.ts'",
		"start": "npm-run-all clean build && concurrently \"npm:start-*\"",
		"start-bot": "node ./lib/bot/index.js",
		"start-api": "node ./lib/api/app.js",
		"test": "jest",
		"test-coverage": "jest --coverage",
		"watch-bot": "nodemon --watch ./bot -e ts --exec \"npm run start-bot\"",
		"watch-api": "nodemon --watch ./api -e ts --exec \"npm run start-api\"",
		"clean": "rimraf lib plugin_packages"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com"
	},
	"dependencies": {
		"@retaildevcrews/adaptive-card-transformer": "^0.2.2",
		"axios": "^0.22.0",
		"botbuilder": "^4.19.3",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"morgan": "^1.10.0",
		"restify": "~8.6.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/dotenv": "8.2.0",
		"@types/jest": "^27.0.2",
		"@types/node": "^15.14.8",
		"@types/restify": "8.4.2",
		"@typescript-eslint/eslint-plugin": "^4.29.2",
		"@typescript-eslint/parser": "^4.29.2",
		"app-root-path": "^3.0.0",
		"axios-mock-adapter": "^1.20.0",
		"concurrently": "^6.2.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-diff": "^1.0.11",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^27.2.4",
		"mixme": ">=0.5.2",
		"nodemon": "^2.0.12",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"semver-regex": ">=3.1.3",
		"set-value": ">=4.0.1",
		"trim-newlines": ">=3.0.1",
		"ts-jest": "^27.0.5",
		"typescript": "~4.3.2"
	}
}
